<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.favorite.FavoriteFragment"
    android:orientation="vertical">
<EditText
    android:id="@+id/fragment_favorite_edt_search"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_16"
    android:padding="@dimen/dp_10"
    android:hint="@string/type_a_keyword_to_search"
    android:drawableLeft="@drawable/search_item_movie"
    android:background="@drawable/custom_edit_text_search"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_favorite_rcy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>